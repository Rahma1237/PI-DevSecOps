# ===== STAGE 1: BUILD =====
FROM node:18-alpine AS build

WORKDIR /app

# Copie des fichiers de dépendances
COPY package*.json ./

# Installation des dépendances (prod uniquement)
RUN npm ci --omit=dev

# Copie du reste du code
COPY . .

# Construction du projet (si applicable)
RUN npm run build

# ===== STAGE 2: RUNTIME =====
FROM node:18-alpine

# Crée un utilisateur non-root sécurisé
RUN addgroup -S appgroup && adduser -S appuser -G appgroup

WORKDIR /app

# Copie uniquement le code compilé et les dépendances
COPY --from=build /app/dist ./dist
COPY --from=build /app/node_modules ./node_modules

ENV NODE_ENV=production
ENV PORT=3000

EXPOSE 3000

# Vérification de l’état du conteneur
HEALTHCHECK --interval=30s --timeout=5s \
    CMD wget -qO- http://localhost:3000/health || exit 1

USER appuser

CMD ["node", "dist/server.js"]
